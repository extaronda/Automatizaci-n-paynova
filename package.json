{
  "name": "paynova-automation-tests",
  "version": "1.0.0",
  "description": "Automated testing for Paynova using Playwright and Cucumber",
  "main": "index.js",
  "scripts": {
    "test": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js",
    "test:dev": "cross-env ENV=dev BROWSER=chromium cucumber-js --config=config/cucumber.js",
    "test:uat": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js",
    "test:login": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.login.js",
    "test:solicitud": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.rrhh.js",
    "test:vida": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.vida.js",
    "test:siniestros": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js",
    "test:siniestros:registro": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.registro.js",
    "test:firefox": "cross-env ENV=uat BROWSER=firefox cucumber-js --config=config/cucumber.js",
    "test:webkit": "cross-env ENV=uat BROWSER=webkit cucumber-js --config=config/cucumber.js",
    "test:headless": "cross-env ENV=uat BROWSER=chromium HEADLESS=true cucumber-js --config=config/cucumber.js",
    "test:parallel": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --parallel 2",
    "test:tags": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js",
    "test:validar-detalle": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @validar-detalle",
    "test:validar-historico": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @validar-historico",
    "test:validar-reporteria": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @validar-reporteria",
    "test:editar-observada": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @editar-observada",
    "test:aprobar": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags \"@aprobar-vida and @aprobar\"",
    "test:aprobar:aprobador1": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags \"@aprobador1 and @aprobar\"",
    "test:aprobar:aprobador2": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags \"@aprobador2 and @aprobar\"",
    "test:aprobar:aprobador3": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags \"@aprobador3 and @aprobar\"",
    "test:siniestros:aprobar": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags \"@aprobar-siniestros\"",
    "test:siniestros:aprobar:aprobador1": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags \"@aprobador1 and @aprobar-siniestros\"",
    "test:siniestros:aprobar:aprobador2": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags \"@aprobador2 and @aprobar-siniestros\"",
    "test:siniestros:aprobar:aprobador3": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags \"@aprobador3 and @aprobar-siniestros\"",
    "test:siniestros:validar-detalle": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @validar-detalle-siniestros",
    "test:siniestros:validar-historico": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @validar-historico-siniestros",
    "test:siniestros:validar-reporteria": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @validar-reporteria-siniestros",
    "test:siniestros:editar-observada": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @editar-observada-siniestros",
    "test:siniestros:validaciones": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @suite-validacion-siniestros",
    "test:fast": "cross-env ENV=uat BROWSER=chromium HEADLESS=true cucumber-js --config=config/cucumber.js --parallel 2",
    "test:suite:smoke": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-smoke",
    "test:suite:rrhh": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-rrhh",
    "test:suite:vida:registro": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-vida-registro",
    "test:suite:vida:aprobacion": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-vida-aprobacion",
    "test:suite:vida:aprobacion:aprobador2": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @aprobador2",
    "test:suite:vida:aprobacion:aprobador3": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @aprobador3",
    "test:suite:vida:aprobacion:aprobadores2y3": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags \"@aprobador2 or @aprobador3\"",
    "test:suite:vida": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-vida",
    "test:suite:vida:completa": "powershell -ExecutionPolicy Bypass -File scripts/run-suite-vida-completa.ps1",
    "test:suite:siniestros": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @suite-siniestros",
    "test:suite:siniestros:registro": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.registro.js --tags @suite-siniestros-registro",
    "test:suite:siniestros:validaciones": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.siniestros.js --tags @suite-validacion-siniestros",
    "test:suite:completa": "cross-env ENV=uat BROWSER=chromium cucumber-js --config=config/cucumber.js --tags @suite-completa",
    "test:suite:completa:orden": "powershell -ExecutionPolicy Bypass -File scripts/run-suite-completa.ps1",
    "posttest": "npx ts-node src/helper/report.ts",
    "posttest:dev": "npx ts-node src/helper/report.ts",
    "posttest:uat": "npx ts-node src/helper/report.ts",
    "posttest:login": "npx ts-node src/helper/report.ts",
    "posttest:solicitud": "npx ts-node src/helper/report.ts",
    "posttest:vida": "npx ts-node src/helper/report.ts",
    "posttest:siniestros": "npx ts-node src/helper/report.ts",
    "open:report": "start test-results/reports/index.html",
    "clean": "rmdir /s /q test-results node_modules 2>nul & del package-lock.json 2>nul || echo Cleaned",
    "clean:data": "powershell -ExecutionPolicy Bypass -File scripts/clean-data.ps1"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Adrian Rondan",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.1.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "playwright": "^1.40.1"
  }
}

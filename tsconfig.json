{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@types/node"],
    "typeRoots": ["./node_modules/@types", "./src/helper/types"],
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@steps/*": ["src/step-definitions/*"],
      "@helper/*": ["src/helper/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results"
  ]
}

